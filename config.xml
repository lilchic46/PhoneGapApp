<?xml version='1.0' encoding='utf-8'?>
<widget id="greenwich.gcs18389.phonegapapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PhoneGap Application CW2</name>
    <description>
        PhoneGap CW2 mobile app.
    </description>
    <author email="yennhgcs18389@fpt.edu.vn" href="http://cordova.io">
        Yen Ngo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
